<%= render "shared/nav_bar", name: 'New Category', display: '', route: root_path %>

<%= form_with model: @group, url: group_index_path do |form| %>
  <%= render "shared/form_errors", form: form %>
  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control", placeholder: "name", :required => true  %>
  </div>
  <div class="mb-3">
    <%= form.label :icon %>
    <%= form.text_field :icon, class:"form-control", placeholder: "icon", :required => true  %>
  </div>
  <div class="mb-3">
    <div class="green-color d-flex justify-content-center">
      <%= form.submit  "Add Category", class:"btn border text-white py-2 px-5 m-2", data: { turbo: false } %>
    </div>
  </div>
<% end %>
