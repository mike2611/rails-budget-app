<%= render "shared/nav_bar", name: 'New Transaction', display: '', route: group_cost_index_path %>

<%= form_with model: @cost, url: group_cost_index_path do |form| %>
  <%= render "shared/form_errors", form: form %>
  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control", placeholder: "name", :required => true  %>
  </div>
  <div class="mb-3">
    <%= form.label :amount %>
    <%= form.number_field :amount, class:"form-control", placeholder: "amount", :required => true  %>
  </div>
  <% @groups.each do |group| %>
    <%= label_tag group.name %>
    <%= check_box_tag "groups[#{group.id}]", group.name %>
    <br />
  <% end %>
  <div class="green-color d-flex justify-content-center">
    <%= form.submit  "Create Transaction", class:"btn border text-white py-2 px-5 m-2", data: { turbo: false } %>
  </div>
<% end %>

